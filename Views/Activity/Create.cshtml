@model ActivityEvent
<div class="container">
    <div class="form-group">
        <h1>Plan Your Activity</h1>
        <a href="home">Home</a>
        <a href="logout">Logout</a>
    </div>
    <div class="card">
        <div class="card-body">
            <form action="/generateActivity" method="post">
                 <div class="form-group col-sm-6">
                    <label>Title:</label>
                    <span asp-validation-for="ActivityName"></span>
                    <input type="text" name="ActivityName" class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Activity Start Time:</label>
                    <span asp-validation-for="ActivityStart"></span>
                    <input type="date" name="ActivityStart" class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Activity Duration (in hours):</label>
                    <span asp-validation-for="ActivityDuration"></span>
                    <input type="number" name="ActivityDuration" class="form-control" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Activity Description:</label>
                    <span asp-validation-for="ActivityDescription"></span>
                    <input type="text" name="ActivityDescription" class="form-control" />
                </div>
                <button type="submit" class="btn btn-info">Create</button>
            </form>
        </div>
    </div>
</div>